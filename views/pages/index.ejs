<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Absences manager</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mt-3 mb-3">Absences</h3>
                    <a class="btn btn-primary" href="/get-calc" download>Download ICalc</a>
                </div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Employee</th>
                            <th scope="col">Image</th>
                            <th scope="col">Status</th>
                            <th scope="col">Type</th>
                            <th scope="col">Start date</th>
                            <th scope="col">End date</th>
                            <th scope="col">Admitter note</th>
                            <th scope="col">Member note</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% absences.map(absence => { %>
                        <tr>
                            <td><a href="/?userId=<%= absence.member.userId %>"><%= absence.member.name %></a></td>
                            <td><img src="<%= absence.member.image %>" /></td>
                            <td><%= absence.isAbsent ? absence.type === 'sickness' ? 'is sick' : 'is on vacation' : 'is working' %></td>
                            <td><%= absence.type %></td>
                            <td><%= absence.startDate %></td>
                            <td><%= absence.endDate %></td>
                            <td><%= absence.admitterNote || '-' %></td>
                            <td><%= absence.memberNote || '-' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>